@{
    ViewBag.Title = "Home Page";
}

<script>
    
    //jquery for hiding user functionality when not logged in
    $(document).ready(function() {$("#userMenu").hide();});

    //temporary function to toggle between user/guest mode
    $(document).ready(function(){
        $("#btnMenuToggle").click(function () {
            $("#guestMenu").toggle();
            $("#userMenu").toggle();
        });
    });
    //load more causes on demand
    $(document).ready(function(){
        $("#btnLoadMore").click(function () {
            $("#causesList").append("<div class='row col-12'> New cause info will be loaded.</div>");
        });
    });

</script>

<div class="container">
    <section class="row bg-light col-md-12">
        <div class="text-info ml-3">
            <h2>Our Causes</h2>
            <p> Discover our causes and sign your signature to support them.</p>
        </div>
    </section>

    <section class="container bg-light row col-12" id="causesList">

        <div class="row">
            <div class="col-3 img-fluid"><img class="img-fluid" src="~/Content/img/vote.png" /></div>
            <div class="col-9">
                <h2 class="text-center">ViewBag.Item[1].Title</h2>
                <div class="text-center">ViewBag.Item[1].Status</div>
                <div class="text-center">ViewBag.Item[1].Count</div>
                <h5 class="text-center">ViewBag.Item[1].Description</h5>
                <div class="text-right">More Info</div>
            </div>
        </div>

        <div class="row">
            <div class="col-3 img-fluid"><img class="img-fluid" src="~/Content/img/vote.png" /></div>
            <div class="col-9">
                <h2 class="text-center">ViewBag.Item[2].Title</h2>
                <div class="text-center">ViewBag.Item[2].Status</div>
                <div class="text-center">ViewBag.Item[2].Count</div>
                <h5 class="text-center">ViewBag.Item[2].Description</h5>
                <div class="text-right">More Info</div>
            </div>
        </div>
    </section>
    <button class=" col-12 btn btn-default" id="btnLoadMore">Load more Causes</button>

</div>

