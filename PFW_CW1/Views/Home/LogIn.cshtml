@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="bg-light">
    <div class="text-center ">
        <span class="text-primary ">
            <h2>Log In</h2>
        </span><span class="text-info "><h5> Please log in with your username and password to continue</h5></span>
    </div>

    <div class="container">
        <form method="post">
            <div class="form-inline">
                <label for="username" class="col-4">User name:</label>
                <input class="form-control col-6" type="text" name="username"
                       id="username" size="60" maxlength="60" required placeholder="user@abc.xyz" />
            </div>
            <div class="form-inline">
                <label class="col-4" for="password">Password:</label>
                <input class="form-control col-6" type="password"
                       name="password" id="password" size="60" maxlength="60" required placeholder="********" />
            </div>
            <br />
            <input class=" col-12 form-control btn-default btn-primary" type="submit" name="login" value="Sign In" />
            <br />
        </form>
    </div>
</section>


