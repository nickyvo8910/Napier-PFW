        </dt>

        <dd>
            @Html.DisplayFor(model => model.photoLnk)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.author)
        </dt>

        <dd>
            @{ var strAuthor = Model.members.first_name + " " + Model.members.last_name; }
            @strAuthor
        </dd>

